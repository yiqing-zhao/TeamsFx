{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "username": "teamsfx-renovate[bot]",
  "gitAuthor": "teamsfx-renovate<134346904+teamsfx-renovate[bot]@users.noreply.github.com>",
  "repositories": ["yiqing-zhao/TeamsFx"],
  "includePaths": ["packages/sdk/**", "packages/sdk-react/**", "templates/**"],
  "enabledManagers": ["npm"],
  "npm": {
    "fileMatch": ["(^|/)package\\.json.tpl$"]
  },
  "skipInstalls": false,
  "packageRules": [
    {
      "enabled": false,
      "matchDepPatterns": ["*"],
      "excludeDepPatterns": ["bot", "fluentui"],
      "excludeDepNames": [
        "@microsoft/teams-js",
        "@microsoft/microsoft-graph-client",
        "@microsoft/mgt-element",
        "@microsoft/mgt-react",
        "@microsoft/mgt-teamsfx-provider"
      ]
    },
    {
      "groupName": "botbuilder",
      "matchPackagePrefixes": ["bot"]
    },
    {
      "groupName": "fluentui",
      "matchPackagePrefixes": ["@fluentui/"]
    },
    {
      "groupName": "graph toolkit",
      "matchPackagePrefixes": ["@microsoft/mgt"]
    },
    {
      "matchPackageNames": [
        "botbuilder",
        "botbuilder-dialogs",
        "botframework-schema",
        "botbuilder-core",
        "@microsoft/teams-js",
        "@microsoft/microsoft-graph-client",
        "@fluentui/react-components",
        "@fluentui/react",
        "@microsoft/mgt-element",
        "@microsoft/mgt-react",
        "@microsoft/mgt-teamsfx-provider"
      ],
      "rangeStrategy": "bump"
    }
  ]
}
